<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.3/dist/css/bootstrap.min.css" rel="stylesheet">
    <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.3.3/dist/js/bootstrap.bundle.min.js"></script>
    <title>Department Store App</title>
</head>
<body>
    <nav class="navbar navbar-expand-sm bg-dark navbar-dark">
        <div class="container-fluid">
            <a class="navbar-brand" href="/products">Department Store App</a>
            <button class="navbar-toggler" type="button" data-bs-toggle="collapse" data-bs-target="#collapsibleNavbar">
                <span class="navbar-toggler-icon"></span>
            </button>
            <div class="collapse navbar-collapse" id="collapsibleNavbar">
                <ul class="navbar-nav">
                    <li class="nav-item">
                        <a class="nav-link" href="/addProduct">Add new product</a>
                    </li>
                </ul>
            </div>
        </div>
    </nav>

    <div class="container">
        <br>
        <div class="text-center"><h2>Products from selected category</h2></div>
        <br>
        <table class="table table-hover small text-center">
            <thead>
                <tr>
                    <th width="100">Product Name</th>
                    <th width="100">Product Image</th>
                    <th width="100">Quantity</th>
                    <th width="100">Price</th>
                    <th width="50">Edit</th>
                    <th width="50">Delete</th>
                </tr>
            </thead>
            <tbody>
                <% for (let i=0; i<products.length; i++){ %>
                    <tr>
                        <td><a href="/products/<%= products[i].productId %>"><%= products[i].productName %></a></td>
                        <td><img src="<%= products[i].image ? '/images/' + products[i].image : 'https://via.placeholder.com/150' %>" width="50%"></td>
                        <td><%= products[i].quantity %></td>
                        <td>$<%= typeof products[i].price === 'number' ? products[i].price.toFixed(2) : 'N/A' %></td>
                        <td><a href="/editProduct/<%= products[i].productId %>" class="btn btn-warning btn-sm">Edit</a></td>
                        <td><a href="/deleteProduct/<%= products[i].productId %>" class="btn btn-danger btn-sm" onclick="return confirm('Are you sure you want to delete this product?')">Delete</a></td>
                    </tr>
                <% } %>
            </tbody>
        </table>
        <div class="text-center">
            <a href="/addProduct" class="btn btn-success">Add Product</a>
        </div>
    </div>
</body>
</html>
